#include <bits/stdc++.h>
using namespace std;
using ll = long long;
using ull = unsigned long long;
 
#define testcase() {ll t; cin >> t; while(t--) {solve();}}
#define all(x) (x).begin(), (x).end()
#define sz(x) ((ll)(x).size())
#define pb push_back
#define ar array
#define bug() cout << "######PLEASE_NO_BUG######\n"
 
void solve() {
	int k, n, w;
	cin >> k >> n >> w;
	int s=0;
	for(int i=1; i<=w; ++i) 
		s+=i*k;
	if(s-n>0) cout << s-n;
	else cout << "0";
}
 
int main() {
	ios_base::sync_with_stdio(false);
	cin.tie(nullptr);
//	testcase();
	solve();
	return 0;
}
